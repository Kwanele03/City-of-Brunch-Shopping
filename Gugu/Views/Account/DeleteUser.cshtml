@model List<ApplicationUser>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.DateofBirth.ToShortDateString()</td>
                <td>@user.UserName</td>
                <td>
                    <a asp-controller="Account" asp-action="UserDetails" asp-route-userId="@user.Id">View Details</a> |
                    <form asp-controller="Account" asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

