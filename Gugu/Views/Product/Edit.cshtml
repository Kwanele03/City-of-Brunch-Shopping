@using Gugu.Models
@model Product

@{
    ViewData["Title"] = "Update Product";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Update @Model.Item</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group text-center">
                <img id="LogoPreview" src="@Model.Logo" />
            </div>
            
            <div class="form-group">
                <label asp-for="Logo" class="control-label">Logo</label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Item" class="control-label">Item</label>
                <input asp-for="Item" class="form-control" />
                <span asp-validation-for="Item" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Specification" class="control-label">Specification</label>
                <input asp-for="Specification" class="form-control" />
                <span asp-validation-for="Specification" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
              <br/>
                <div class="form-group">
                    <button  class="btn btn-primary btn-block" type="submit">Update</button>
                    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Cancel</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#LogoPreview").attr("src", $("#Logo").val());
        });

        $("#Logo").on("change", function() {
            $("#LogoPreview").attr("src", $(this).val());
        });
    </script>
}

